<div class="py-10 container">
    <div x-data="{ todos: [] }" x-init="fetch('https://dummyjson.com/todos?limit=5')
        .then(res => res.json())
        .then(data => todos = data.todos)">
        <h2 class="text-3xl font-extrabold text-white text-center mb-4">Todos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <template x-for="todo in todos" :key="todo.id">
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="p-6">
                        <p class="text-lg font-semibold text-gray-700 mb-2" x-text="todo.todo"></p>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-500">Completed:</span>
                            <span class="text-sm font-medium" :class="{'text-green-600': todo.completed, 'text-red-600': !todo.completed}" x-text="todo.completed ? 'Yes' : 'No'"></span>
                        </div>
                    </div>
                </div>
            </template>
        </div>
    </div>
    <div x-data="{ recipes: [] }" x-init="fetch('https://dummyjson.com/recipes?limit=5')
        .then(res => res.json())
        .then(data => recipes = data.recipes)">
        <h2 class="text-3xl font-extrabold text-white text-center mt-12 mb-8">Recipes</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <template x-for="recipe in recipes" :key="recipe.id">
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <img :src="recipe.image" :alt="recipe.name" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 mb-2" x-text="recipe.name"></h3>
                        <p class="text-gray-600 text-sm mb-4" x-text="recipe.instructions.substring(0, 100) + '...'"></p>
                        <div class="flex items-center justify-between">
                            <span class="text-gray-500 text-xs">Prep: <span x-text="recipe.prepTime"></span>m</span>
                            <span class="text-gray-500 text-xs">Cook: <span x-text="recipe.cookTime"></span>m</span>
                        </div>
                    </div>
                </div>
            </template>
        </div>
    </div>
</div>